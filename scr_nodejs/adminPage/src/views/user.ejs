    <div class="w3-container">
      <h2>Danh Sách Khách Hàng Đặt Sản Phẩm</h2>
      <% for(let i=0; i < databill.length; i++) { %>
      <h3>Tổng số lượng bán được: <%= databill[i].TongSoLuong %></h3>
      <% } %> <% for(let i=0; i < datadetail.length; i++) { %>
      <h3>
        Tổng doanh thu hiện tại: <%= datadetail[i].TongGiaTien.toLocaleString()
        %>
      </h3>
      <% } %> <% for(let i=0; i < datanameproduct.length; i++) { %>
