      <% } %>
      <table class="w3-table-all w3-hoverable">
        <thead>
          <tr class="w3-light-grey">
            <th>id khách hàng</th>
            <th>Họ tên Khách hàng</th>
            <th>Số điện thoại</th>
            <th>Mã hóa đơn</th>
            <th>Tên sản phẩm</th>
            <th>Kích cỡ</th>
            <th>Số lượng sản phẩm</th>
            <th>Giá sản phẩm</th>
            <th>Tổng tiền đặt</th>
            <th>Địa chỉ ship</th>

            <th>Thời gian đặt</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < dataUsers.length; i++) { %>
          <tr>
            <td><%= dataUsers[i].idkh %></td>
            <td><%= dataUsers[i].hotenkh %></td>
            <td><%= dataUsers[i].sdt%></td>
            <td><%= dataUsers[i].mahd %></td>
            <td><%= dataUsers[i].tensp %></td>
            <td><%= dataUsers[i].kichco %></td>
            <td><%= dataUsers[i].soluongsp %></td>
            <td><%= dataUsers[i].giatien.toLocaleString() %></td>
            <td><%= dataUsers[i].total.toLocaleString() %></td>
            <td><%= dataUsers[i].diachiship%></td>
            <td><%= dataUsers[i].thoigiandat %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
